    <a href="../index.html" class="nav-btn">Wr√≥ƒá do Menu</a>

<script>
    // Konfiguracja
    const WATER_LEVEL = 80; // top w px (powierzchnia wody)
    const TANK_BOTTOM = 300; // top w px (dno - wysoko≈õƒá klocka)
    const WATER_DENSITY = 1000;

    function setMaterial(type) {
        const block = document.getElementById('block');
        const arrowW = document.getElementById('force-w');
        const result = document.getElementById('result-text');
        
        let density = 0;
        let emoji = '';
        let color = '';
        let name = '';

        // Ustawienia materia≈Ç√≥w
        switch(type) {
            case 'styropian':
                density = 20; emoji = '‚ö™'; color = '#f5f5f5'; name = 'Styropian';
                break;
            case 'drewno':
                density = 700; emoji = 'ü™µ'; color = '#8d6e63'; name = 'Drewno';
                break;
            case 'l√≥d':
                density = 900; emoji = 'üßä'; color = '#e1f5fe'; name = 'L√≥d';
                break;
            case 'woda':
                density = 1000; emoji = 'üíß'; color = '#81d4fa'; name = 'Woda';
                break;
            case 'beton':
                density = 2400; emoji = 'üß±'; color = '#9e9e9e'; name = 'Beton';
                break;
            case 'zelazo':
                density = 7800; emoji = '‚öì'; color = '#546e7a'; name = '≈ªelazo';
                break;
        }

        // 1. Zmiana wyglƒÖdu
        block.style.backgroundColor = color;
        block.innerHTML = emoji + `
            <div id="force-g" class="arrow">Fg<br><small>Ciƒô≈ºar</small></div>
            <div id="force-w" class="arrow">Fw<br><small>Wyp√≥r</small></div>
        `;
        // Musimy pobraƒá strza≈Çki na nowo po nadpisaniu HTML
        const newArrowW = block.querySelector('#force-w');
        const newArrowG = block.querySelector('#force-g');

        // 2. Logika fizyki
        // Startujemy z g√≥ry
        block.style.top = '0px';
        newArrowW.style.opacity = '0'; // Brak wyporu w powietrzu
        result.innerText = "Wrzucam " + name + "...";

        setTimeout(() => {
            // Wpadniƒôcie do wody
            newArrowW.style.opacity = '1'; // Wyp√≥r dzia≈Ça
            
            if (density < WATER_DENSITY) {
                // P≈ÅYWA (czƒô≈õciowo zanurzony)
                // Im mniejsza gƒôsto≈õƒá, tym bardziej wystaje
                // Styropian (20) -> Prawie na wierzchu
                // L√≥d (900) -> Prawie ca≈Çy pod wodƒÖ
                const submersionRatio = density / WATER_DENSITY; 
                const floatLevel = WATER_LEVEL - 50 + (100 * submersionRatio); 
                // Uproszczona wizualizacja
                block.style.top = Math.max(WATER_LEVEL - 20, floatLevel) + 'px'; 
                
                result.innerText = "P≈Çywa! (Gƒôsto≈õƒá < Wody)";
                result.style.color = "green";
                
                // Wizualizacja si≈Ç: Wyp√≥r r√≥wnowa≈ºy ciƒô≈ºar
                newArrowG.style.transform = "scale(1)";
                newArrowW.style.transform = "scale(1)";

            } else if (density === WATER_DENSITY) {
                // P≈ÅYWA W TONI (Zawieszony)
                block.style.top = (WATER_LEVEL + 100) + 'px'; // ≈örodek
                result.innerText = "P≈Çywa w toni (Gƒôsto≈õƒá = Wody)";
                result.style.color = "blue";

            } else {
                // TONIE
                block.style.top = TANK_BOTTOM + 'px'; // Dno
                result.innerText = "Tonie! (Gƒôsto≈õƒá > Wody)";
                result.style.color = "red";
                
                // Wizualizacja si≈Ç: Ciƒô≈ºar wygrywa
                newArrowG.style.transform = "scale(1.5)"; // Du≈ºy ciƒô≈ºar
                newArrowW.style.transform = "scale(1)"; // Standardowy wyp√≥r
            }

        }, 500);
    }
</script>

